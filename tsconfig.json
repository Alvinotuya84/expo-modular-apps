{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
      "strict": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./apps/main-app/*"],
        "@packages/*": ["./packages/*"]
      },
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    },
    "include": [
      "apps/**/*",
      "packages/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/node_modules",
      "**/dist",
      "**/build"
    ]
  }